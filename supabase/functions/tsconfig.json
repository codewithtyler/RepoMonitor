{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "types": ["deno"],
    "paths": {
      "std/*": ["./node_modules/@types/deno/std/*"],
      "@supabase/supabase-js": ["./node_modules/@supabase/supabase-js"],
      "openai": ["./node_modules/openai"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
